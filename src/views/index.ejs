<%- include('includes/head') %>
<%- include('includes/navbar') %>
        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-4">
                    <h1 class="text-center">Agenda</h1>
                    <p class="text-center lead">Contatos Abaixo</p>

                    <%- include('includes/messages') %>
                    <div class="responsive-table">

                        <table class="table my-3">
                            <% if (user) contatos.forEach(contato => { if (user._id == contato.from) {%>
                                <tr>
                                    <td><%= contato.name %> </td>
                                    <td><%= contato.lastName %> </td>
                                    <td><%= contato.email %> </td>
                                    <td><%= contato.phone %> </td>
                                    <td><a href="/contato<%= contato._id %>"> Editar </a></td>
                                    <td><a href="/contato/delete/<%= contato._id %>" class="text-danger">Deletar</a></td> 
                                </tr>
                            <% }}) %>
                        </table>
                    </div>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>
<%- include('includes/footer') %>